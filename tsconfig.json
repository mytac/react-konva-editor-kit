{
    "compilerOptions": {
        "strict": true,
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "outDir": "./dist",
        "declaration": true,
        "declarationMap": true,
        "emitDeclarationOnly": false,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "isolatedModules": true,
        "jsx": "react-jsx",
        "noImplicitAny": false,
        "skipLibCheck": true,
        "removeComments": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["./index.ts"]
}
